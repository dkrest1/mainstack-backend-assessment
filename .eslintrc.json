{
  "extends": ["airbnb-base", "plugin:jest/recommended", "plugin:import/recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier", "@typescript-eslint", "jest", "import"],
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "no-console": "error",
    "func-names": "off",
    "consistent-return": "off",
    "jest/expect-expect": "off",
    "no-underscore-dangle": "off",
    "@typescript-eslint/explicit-function-return-type": "warn"
  }
}
